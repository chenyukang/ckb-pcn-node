import blockchain;

array PaymentHash [byte; 32];
array PaymentSecret [byte; 32];
array Signature [byte; 64];
option ExpiryTimeOpt (Duration);

option AmountOpt (Uint64);
option SiPrefixOpt (byte);
option FeatureOpt (Uint32);

table Duration {
    seconds: Uint64,
    nanos: Uint64,
}

table FinalHtlcTimeout {
    attr_id: byte,
    value: Uint64,
}

table FinalHtlcMinimumCltvExpiry {
    attr_id: byte,
    value: Uint64,
}

table ExpiryTime {
    attr_id: byte,
    value: Duration,
}

table Description {
    attr_id: byte,
    value: Bytes,
}

table FallbackAddr {
    attr_id: byte,
    value: Bytes,
}

table Feature {
    attr_id: byte,
    value: Uint64,
}

table UdtScript {
    attr_id: byte,
    value: Script,
}

table PayeePublicKey {
    attr_id: byte,
    value: Bytes,
}

union InvoiceAttr {
    ExpiryTime,
    Description,
    FinalHtlcTimeout,
    FinalHtlcMinimumCltvExpiry,
    FallbackAddr,
    Feature,
    UdtScript,
    PayeePublicKey,
}

vector InvoiceAttrsVec <InvoiceAttr>;

table RawInvoiceData {
    payment_hash: PaymentHash,
    payment_secret: PaymentSecret,
    signature: Signature,
    attrs: InvoiceAttrsVec,
}

table RawCkbInvoice {
    currency: byte,
    amount: AmountOpt,
    prefix: SiPrefixOpt,
    data: RawInvoiceData,
}
